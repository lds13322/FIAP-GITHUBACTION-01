# Definindo o nome do Workflow:
name: Test Workflow

# Definindo quando o Workflow será disparado:
on:
    push:
        branches: [ main, developer ]

# Defininido os Jobs que o Workflow executará:
jobs:
  teste_job:
        name: Executando o Job de Teste
        runs-on:  self-hosted
        steps:  
        - name: Step 1
          uses: actions/Checkout@v2

        - name: Step 2
          run:  echo "Olá, mundo! Este é o nosso primeiro job no GitHub actions!"

        - name: Step 3
          run:  echo "Olá, mundo! Esta e a Step 3!"
